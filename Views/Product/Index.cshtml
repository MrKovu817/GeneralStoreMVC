@model IEnumerable<GSMVC.Models.ProductIndexModel>

<h1 class="text-center">All Products</h1>
<a href="/product/create" class="text-primary">Create a product</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>QuantityInStock</th>
            <th>Price</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.QuantityInStock</td>
                <td>@product.Price</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>